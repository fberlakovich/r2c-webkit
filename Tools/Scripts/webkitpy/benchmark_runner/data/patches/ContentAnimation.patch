@@ -167,9 +167,54 @@
         function setupAnimation()
         {
             makeParticles();
+            
+            window.setTimeout(function() {
+                location.hash = 'done';
+            }, 10000)
+        }
+        
+        function hashChanged()
+        {
+            if (location.hash === '#submit')
+                submitResults();
+        }
+
+        function submitResults()
+        {
+            var results = {
+                'content-animation' : {
+                    'metrics' : {
+                        'FrameRate' : ['Arithmetic']
